
{% extends '../layouts/layout.twig' %}

{% block title %}Styleguide{% endblock %}

{% block page_heading %}Styleguide{% endblock %}

{% block content %}

  <div class="pagetype" data-page="page-compo"></div>
  {% set pathComponent = "../blocks/" %}
  {% set typeComponent = ".twig" %}
  {% set prefixComponent = "block-" %}
  {% set list_components = [
    {
      'id':'elements',
      'name': 'Basic Elements'
    },
    {
      'id':'example',
      'name': 'Block Example'
    }
  ] %}

  {% for component in list_components %}
    {% set componentPath = pathComponent ~ prefixComponent ~ component.id ~ typeComponent %}
    <div class="component--item" id="{{component.id}}">
      <h2 class="component--title">{{ loop.index }}. {{ component.name }}</h2>
      <div class="component--demo">
      {% include componentPath %}
      </div>
      <button class="show-code">Show/Hide Code</button>
      <div class="component--source element-invisible">
        <div class="component--html">
          <h2 class="component--source--title">Markup</h2>
          <pre  class="brush: php">
            {% include componentPath %}
          </pre>
        </div>
      </div>
    </div>
  {% endfor %}

  <div class="component--list">
    <div class="component--list--header">
      <h2 class="component--title">Components List</h2>
      <a title="Show List" class="show-list">+</a>
      <a title="Hide List"   style="display:none" class="hide-list">-</a>
    </div>
    <div class="component--list--content">
      <ul>
        {% for component in list_components %}
          <li class="component--list--item"><a href="#{{component.id}}">{{ loop.index }}. {{ component.name }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>

{% endblock %}

{% block footer_scripts %}
  {{ parent() }}
  <script type="text/javascript" src="http://code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/SyntaxHighlighter/3.0.83/scripts/shCore.js"></script>
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/SyntaxHighlighter/3.0.83/scripts/shBrushJScript.js"></script>
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/SyntaxHighlighter/3.0.83/scripts/shBrushPhp.js"></script>
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/SyntaxHighlighter/3.0.83/scripts/shBrushCss.js"></script>
  <script src="js/styleguide.js"></script>

  <script type="text/javascript">
     SyntaxHighlighter.all()
  </script>

{% endblock %}

